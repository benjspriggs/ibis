{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "tslint",
            "problemMatcher": {
                "owner": "javascript",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "^([A-Z]+):\\s+\\(([\\w-]+)\\)\\s+([\\w/.]+)\\[(\\d+),\\s+(\\d+)\\]:\\s+(.*)$",
                        "severity": 1,
                        "code": 2,
                        "file": 3,
                        "line": 4,
                        "column": 5,
                        "message": 6
                    }
                ]
            }
        }
    ]
}