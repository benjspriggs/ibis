{
  "name": "ibis",
  "version": "1.0.0",
  "description": "Web version of IBIS (MedicineWorks)",
  "bin": "dist/index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm:start:api\" \"npm:start:app\"",
    "install": "npm run install:lib && npm run install:api && npm run install:app",
    "install:lib": "cd lib && npm install",
    "install:api": "cd api && npm install",
    "install:app": "cd app && npm install",
    "start:api": "cd api && npm run start",
    "start:app": "cd app && npm run start",
    "watch:app": "cd app && npm run serve",
    "watch:api": "cd api && npm run serve",
    "build": "npm run build:lib && npm run build:api && npm run build:app",
    "build:api": "cd api && npm run build",
    "build:app": "cd app && npm run build",
    "build:lib": "cd lib && npm run build",
    "test": "concurrently \"npm:test:api\" \"npm:test:app\"",
    "test:api": "cd api && npm run test",
    "test:app": "cd app && npm run test",
    "watch": "concurrently --kill-others \"npm:watch:ts\" \"npm:watch:api\" \"npm:watch:app\"",
    "watch:ts": "tsc -w",
    "pkg": "concurrently \"npm:pkg:api\" \"npm:pkg:app\"",
    "pkg:api": "pkg api",
    "pkg:app": "pkg app",
    "lint": "npm run lint:lib && npm run lint:api && npm run lint:app",
    "lint:lib": "tslint --project lib -t verbose",
    "lint:api": "tslint --project api -t verbose",
    "lint:app": "tslint --project app -t verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjspriggs/ibis.git"
  },
  "author": "ben@sprico.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benjspriggs/ibis/issues"
  },
  "homepage": "https://github.com/benjspriggs/ibis#readme",
  "devDependencies": {
    "ava": "^1.4.1",
    "concurrently": "^4.1.0",
    "gulp-better-rollup": "^4.0.1",
    "gulp-typescript": "^5.0.1",
    "husky": "^2.2.0",
    "lerna": "^3.14.1",
    "pkg": "^4.4.0",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ignore": [
      "api/db.json"
    ]
  }
}
