{
  "name": "ibis",
  "version": "1.0.0",
  "description": "Web version of IBIS (MedicineWorks)",
  "bin": "dist/index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm:start:api\" \"npm:start:app\"",
    "start:api": "cd api && npm run start",
    "start:app": "cd app && npm run start",
    "watch:app": "cd app && npm run serve",
    "watch:api": "cd api && npm run serve",
    "build": "npm run build:ts && npm run build:copy",
    "build:ts": "tsc",
    "build:copy": "gulp copy",
    "test": "npm run build && ava",
    "watch": "npm run build:copy && concurrently --kill-others \"npm:watch:ts\" \"npm:watch:api\" \"npm:watch:app\" \"npm:watch:copy\"",
    "watch:ts": "tsc -w",
    "watch:copy": "gulp watch",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint src/**/*.ts -t verbose",
    "lint:ts:fix": "tslint src/**/*.ts -t verbose --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjspriggs/ibis.git"
  },
  "author": "ben@sprico.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benjspriggs/ibis/issues"
  },
  "homepage": "https://github.com/benjspriggs/ibis#readme",
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ignore": [
      "api/db.json"
    ]
  },
  "pkg": {
    "assets": [
      "IBIS*/**/*",
      "dist/**/*"
    ],
    "scripts": [
      "dist/**/*.js"
    ]
  }
}
