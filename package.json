{
  "name": "ibis",
  "version": "1.0.0",
  "description": "Web version of IBIS (MedicineWorks)",
  "scripts": {
    "start": "concurrently --kill-others \"npm:serve:api\" \"npm:serve:app\"",
    "serve:api": "node dist/api/index.js",
    "serve:app": "node dist/index.js",
    "watch:app": "nodemon dist/index.js",
    "watch:api": "nodemon dist/api/index.js",
    "build": "tsc",
    "watch:ts": "tsc -w",
    "db": "docker-compose up",
    "watch:copy": "cpx \"src/**/*.hbs\" dist --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently --kill-others \"npm:db\" \"npm:watch:ts\" \"npm:watch:api\" \"npm:watch:app\" \"npm:watch:copy\"",
    "build:copy": "ts-node copyStaticAssets.ts",
    "build:bundle": "browserify dist/public/scripts/app.js > dist/public/scripts/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjspriggs/ibis.git"
  },
  "author": "ben@sprico.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benjspriggs/ibis/issues"
  },
  "homepage": "https://github.com/benjspriggs/ibis#readme",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/bluebird": "^3.5.25",
    "@types/bluebird-global": "^3.5.10",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-handlebars": "0.0.30",
    "@types/jquery": "^3.3.29",
    "@types/js-beautify": "^1.8.0",
    "@types/lodash": "^4.14.120",
    "@types/shelljs": "^0.8.2",
    "axios": "^0.18.0",
    "bluebird": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-hbs": "^2.0.2",
    "fomantic-ui": "^2.7.2",
    "fuse.js": "^3.4.2",
    "handlebars": "^4.1.0",
    "nano": "^8.0.0",
    "node-html-parser": "^1.1.12",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/browserify": "^12.0.36",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "cpx": "^1.5.0",
    "nodemon": "^1.18.10",
    "tslint": "^5.12.1"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ignore": [
      "db.json"
    ]
  }
}
