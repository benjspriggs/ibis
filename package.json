{
  "name": "ibis",
  "version": "1.0.0",
  "description": "Web version of IBIS (MedicineWorks)",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "watch:node": "nodemon dist/index.js",
    "build": "tsc",
    "watch:ts": "tsc -w",
    "watch:copy": "cpx \"src/**/*.hbs\" dist --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:node\" \"npm run watch:copy\"",
    "build:copy": "ts-node copyStaticAssets.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjspriggs/ibis.git"
  },
  "author": "ben@sprico.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benjspriggs/ibis/issues"
  },
  "homepage": "https://github.com/benjspriggs/ibis#readme",
  "dependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-handlebars": "0.0.30",
    "@types/lodash": "^4.14.120",
    "@types/shelljs": "^0.8.2",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.1.0",
    "node-html-parser": "^1.1.12",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cpx": "^1.5.0",
    "nodemon": "^1.18.10",
    "tslint": "^5.12.1"
  }
}
