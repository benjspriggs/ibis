{
  "name": "ibis",
  "version": "1.0.0",
  "description": "Web version of IBIS (MedicineWorks)",
  "scripts": {
    "start": "concurrently --kill-others \"npm:serve:api\" \"npm:serve:app\"",
    "serve:api": "node dist/api/index.js",
    "serve:app": "node dist/index.js",
    "watch:app": "nodemon dist/index.js",
    "watch:api": "nodemon dist/api/index.js",
    "build": "tsc",
    "test": "npm run build && ava",
    "watch:ts": "tsc -w",
    "watch:copy": "gulp watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently --kill-others \"npm:watch:ts\" \"npm:watch:api\" \"npm:watch:app\" \"npm:watch:copy\"",
    "build:copy": "gulp copy",
    "build:bundle": "browserify dist/public/scripts/app.js > dist/public/scripts/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjspriggs/ibis.git"
  },
  "author": "ben@sprico.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benjspriggs/ibis/issues"
  },
  "homepage": "https://github.com/benjspriggs/ibis#readme",
  "dependencies": {
    "ava": "^1.2.1",
    "axios": "^0.18.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-hbs": "^2.0.2",
    "fomantic-ui": "^2.7.2",
    "fuse.js": "^3.4.2",
    "handlebars": "^4.1.0",
    "lowdb": "^1.0.0",
    "node-html-parser": "^1.1.12",
    "write-file-atomic": "^2.4.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/browserify": "^12.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-handlebars": "0.0.30",
    "@types/graceful-fs": "^4.1.3",
    "@types/jquery": "^3.3.29",
    "@types/js-beautify": "^1.8.0",
    "@types/lodash": "^4.14.120",
    "@types/lowdb": "^1.0.6",
    "@types/pify": "^3.0.2",
    "@types/shelljs": "^0.8.2",
    "@types/supertest": "^2.0.7",
    "@types/write-file-atomic": "^2.1.1",
    "body-parser": "^1.18.3",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "gulp": "^4.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-debug": "^4.0.0",
    "gulp-newer": "^1.4.0",
    "supertest": "^3.4.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ignore": [
      "db.json"
    ]
  },
  "ava": {
    "files": [
      "dist/**/*.test.js"
    ]
  }
}
