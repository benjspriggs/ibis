{
  "name": "ibis-app",
  "version": "1.0.0",
  "description": "",
  "main": "start.js",
  "bin": "start.js",
  "scripts": {
    "start": "node start.js",
    "build": "gulp && npm run build:browser",
    "build:browser": "rollup --config ./src/public/rollup.config.js",
    "test": "ava",
    "e2e": "ava --tap e2e/index.test.js e2e/pkg.test.js",
    "pkg": "gulp package",
    "lint": "tslint --project . -t verbose",
    "clean": "gulp clean"
  },
  "author": "Ben Spriggs",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-hbs": "^2.1.2",
    "got": "^9.6.0",
    "handlebars": "^4.1.2",
    "ibis-api": "file:../ibis-api",
    "ibis-lib": "file:../ibis-lib",
    "node-html-parser": "^1.1.15"
  },
  "optionalDependencies": {
    "fomantic-ui": "^2.7.5"
  },
  "pkg": {
    "assets": [
      "out/**/*"
    ],
    "scripts": [
      "out/**/*.js"
    ]
  },
  "paths": {
    "dist": "./dist",
    "tsconfig": "./tsconfig.json",
    "scripts": ["dist/**/*.js", "!dist/semantic/**/*.js"],
    "vendor": [
      "semantic/dist/semantic.min.css",
      "semantic/dist/semantic.min.js",
      "semantic/dist/basic/assets/fonts/icons.eot",
      "semantic/dist/basic/assets/fonts/icons.ttf",
      "semantic/dist/basic/assets/fonts/icons.woff",
      "semantic/dist/basic/assets/fonts/icons.svg"
    ],
    "static": [
      "src/**/*.hbs",
      "src/**/*.css"
    ]
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "tap": true,
    "files": [
      "dist/**/*.test.js",
      "e2e/**/*.test.js"
    ]
  }
}
