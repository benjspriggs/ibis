<div class="container text">
    <h2 class="ui header">
        <a href="{{filepath.absolute}}">{{title_case info.name}}</a>

        <button class="ui button" data-action="get htm" data-filepath="{{filepath.relative}}">
            Get some data
        </button>
        {{#with info}}
        <div class="ui label">{{version}}</div>
        <div class="sub header">
            <div class="ui breadcrumb">
                <div class="section">{{category}}</div>
                <div class="divider">-</div>
                <div class="section">{{tag}}</div>
                <div class="divider">-</div>
                <div class="active section">{{name}}</div>
            </div>
        {{/with}}
    </h2>
</div>